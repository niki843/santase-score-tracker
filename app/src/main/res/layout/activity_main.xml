<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.santassescoretrack.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        tools:context="com.example.android.santassescoretrack.MainActivity"
        android:orientation="vertical"
        android:background="#659D32">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="com.example.android.santassescoretrack.MainActivity"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:onClick="clearScorePlayer1"/>

            <TextView
                android:layout_weight="2"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Player 1"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Score:"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="24dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:context="com.example.android.santassescoretrack.MainActivity">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context="com.example.android.santassescoretrack.MainActivity">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0px"
                    tools:context="com.example.android.santassescoretrack.MainActivity"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="bottom">

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="A"
                        android:layout_marginLeft="4dp"
                        android:onClick="addAcePlayer1"/>

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="K"
                        android:layout_marginLeft="4dp"
                        android:onClick="addKingPlayer1"/>

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="Q"
                        android:layout_marginLeft="4dp"
                        android:onClick="addQueenPlayer1"/>

                    <Button
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:text="K+Q 20"
                        android:layout_marginLeft="4dp"
                        android:onClick="addTwentyPlayer1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0px"
                    tools:context="com.example.android.santassescoretrack.MainActivity"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="J"
                        android:layout_marginLeft="4dp"
                        android:onClick="addJokerPlayer1"/>

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:layout_marginLeft="4dp"
                        android:onClick="addTenPlayer1"/>

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="9"
                        android:layout_marginLeft="4dp"
                        android:onClick="addNinePlayer1"/>

                    <Button
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:text="K+Q 40"
                        android:layout_marginLeft="4dp"
                        android:onClick="addFourtyPlayer1"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/player_1_score"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:gravity="center"
                android:textSize="18sp"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        tools:context="com.example.android.santassescoretrack.MainActivity"
        android:orientation="vertical"
        android:background="#458B00">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="com.example.android.santassescoretrack.MainActivity"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:onClick="clearScorePlayer2"/>

            <TextView
                android:layout_weight="2"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Player 2"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Score:"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="24dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:context="com.example.android.santassescoretrack.MainActivity">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context="com.example.android.santassescoretrack.MainActivity">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0px"
                    tools:context="com.example.android.santassescoretrack.MainActivity"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="bottom">

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="A"
                        android:layout_marginLeft="4dp"
                        android:onClick="addAcePlayer2"/>

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="K"
                        android:layout_marginLeft="4dp"
                        android:onClick="addKingPlayer2"/>

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="Q"
                        android:layout_marginLeft="4dp"
                        android:onClick="addQueenPlayer2"/>

                    <Button
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:text="K+Q 20"
                        android:layout_marginLeft="4dp"
                        android:onClick="addTwentyPlayer2"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0px"
                    tools:context="com.example.android.santassescoretrack.MainActivity"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="J"
                        android:layout_marginLeft="4dp"
                        android:onClick="addJokerPlayer2"/>

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:layout_marginLeft="4dp"
                        android:onClick="addTenPlayer2"/>

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="9"
                        android:layout_marginLeft="4dp"
                        android:onClick="addNinePlayer2"/>

                    <Button
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:text="K+Q 40"
                        android:layout_marginLeft="4dp"
                        android:onClick="addFourtyPlayer2"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/player_2_score"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:gravity="center"
                android:textSize="18sp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
